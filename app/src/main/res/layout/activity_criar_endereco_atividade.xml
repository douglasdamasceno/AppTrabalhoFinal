<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.CriarEnderecoAtividadeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/end_id_cidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cidade" />

        <EditText
            android:id="@+id/end_id_rua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rua" />

        <EditText
            android:id="@+id/end_id_estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Estado" />

        <EditText
            android:id="@+id/end_id_cep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CEP" />

        <EditText
            android:id="@+id/end_id_complemento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Complemento" />

        <Button
            android:id="@+id/btn_criar_atividade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Criar"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>