<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/lista_minha_atividades_imagem"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_perfil_padrao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lista_minha_atividades_nome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:hint="Nome da Atividade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lista_minha_atividades_imagem"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lista_minha_atividades_descricao"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:hint="Descricao"
        app:layout_constraintEnd_toEndOf="@+id/lista_minha_atividades_nome"
        app:layout_constraintStart_toStartOf="@+id/lista_minha_atividades_nome"
        app:layout_constraintTop_toBottomOf="@+id/lista_minha_atividades_nome" />

    <TextView
        android:id="@+id/lista_minha_atividades_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:hint="99/99/2019"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/lista_minha_atividades_descricao"
        app:layout_constraintTop_toBottomOf="@+id/lista_minha_atividades_descricao" />

    <TextView
        android:id="@+id/lista_minha_atividades_horario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:hint="Horario"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lista_minha_atividades_data"
        app:layout_constraintTop_toBottomOf="@+id/lista_minha_atividades_descricao" />
</androidx.constraintlayout.widget.ConstraintLayout>
